# Editor configuration for consistent coding styles
# See: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{ts,js}]
indent_size = 2
quote_type = single

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[package.json]
indent_size = 2

[{Makefile,makefile}]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf
